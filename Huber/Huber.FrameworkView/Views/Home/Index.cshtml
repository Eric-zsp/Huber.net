    var pageHeight = 0;
    function iFrameHeight() {
        var ifm = document.getElementById("contentPage");
        var subWeb = document.frames ? document.frames["contentPage"].document : ifm.contentDocument;
        if (ifm != null && subWeb != null) {
            if (pageHeight == 0) {
                pageHeight = 901;
            }
            var height = pageHeight > subWeb.body.scrollHeight ? pageHeight : subWeb.body.scrollHeight;
            ifm.height = height;
            ifm.width = subWeb.body.scrollWidth;
            //alert("h:" + ifm.height + "w:" + ifm.width);
        }
    }
    window.onresize = iFrameHeight;
