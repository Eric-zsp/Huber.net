@{
    Layout = "/views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "用户管理";
}
<link href="~/Content/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" />

<div class="table-wrapper products-table section">
    <div class="row-fluid head">
        <div class="span12">
            <h4>用户管理</h4>
        </div>
        <div class="row-fluid filter-block">
            <div class="pull-right">
                @*<div class="ui-select">
                        <select>
                            <option />Filter users
                            <option />Signed last 30 days
                            <option />Active users
                        </select>
                    </div>*@
                @*<input type="text" class="search" />*@
                <a class="btn-flat success new-product" href="javascript:User_operat.addUser()">+ 添加用户</a>
            </div>
            <div class="pull-left">
                <input type="text" class="search user-search" placeholder="查找登录名" id="UserSearch" />
            </div>
        </div>
        <div class="row-fluid" id="userlist">
            @Html.Action("UserList", new { pageindex = 1, pagesize = 20, callback = "User_operat.showList" })
        </div>
    </div>

</div>
